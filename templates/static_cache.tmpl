location ~* ^.+.(xml|ogg|ogv|svg|svgz|eot|otf|woff|mp4|ttf|css|rss|atom|js|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf|pdf|swf|webp)$ {
    access_log                      off;
    log_not_found                   off;
    expires                         max;
    add_header Cache-Control "public, no-transform";
}
